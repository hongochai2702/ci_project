<input type="hidden" value="<?php echo $data.international.calculated.count; ?>" id="calculated_count_international" />
{% if data.international.calculated.service_id is not empty %}
  {% for key,service in data.international.calculated.service_id %}
    <div class="well" id="international_calculated_<?php echo $key; ?>">
      <div class="row form-group">
        <div class="col-sm-1 text-right"><label class="control-label"><?php echo $text_shipping_service; ?></label></div>
        <div class="col-sm-11">
          <select name="data[international][calculated][service_id][<?php echo $key; ?>]" class="form-control">
            {% for service_key,service_type in data.international.calculated.types.service %}
              <option value="<?php echo $service_key; ?>" {% if service_key = service %} selected{% endif %}><?php echo $service_type.description; ?></option>
            <?php }  ?>
          </select>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-sm-1 text-right">
          <label class="control-label"><?php echo $text_shipping_zones; ?></label>
        </div>
        <div class="col-sm-10">
          <label class="checkbox-inline">
            <input type="checkbox" name="data[international][calculated][shipto][<?php echo $key; ?>][]" value="Worldwide"{% if "Worldwide" in data.international.calculated.shipto[key] %} checked="checked"{% endif %} /> <?php echo $text_shipping_worldwide; ?>
          </label>
          {% for zone in zones %}
          <label class="checkbox-inline">
            <input type="checkbox" name="data[international][calculated][shipto][<?php echo $key; ?>][]" value="<?php echo $zone.shipping_location; ?>"{% if zone.shipping_location in data.international.calculated.shipto[key] %} checked="checked"{% endif %} /> <?php echo $zone.description; ?>
          </label>
          <?php }  ?>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-sm-3 pull-right text-right">
          <a onclick="removeShipping('international','<?php echo $key; ?>', 'calculated');" class="btn btn-danger"><i class="fa fa-minus-circle"></i> <?php echo $button_delete; ?></a>
        </div>
      </div>
    </div>
  <?php }  ?>
{% endif %}
